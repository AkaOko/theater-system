{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "mama/theater_system/staticfiles/$1"
        },
        {
            "src": "/media/(.*)",
            "dest": "mama/theater_system/media/$1"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "theater_system.settings",
        "PYTHONPATH": ".",
        "DJANGO_DEBUG": "False"
    },
    "buildCommand": "cd mama/theater_system && python manage.py collectstatic --noinput"
} 